@using Test2.ViewModels
@model EditLeagueViewModel

<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <input type ="hidden" value="BasketballNiId" id="BasketballNiId"/>
    <div class="form-group">
        <label asp-for="Leaguename">Title</label>
        <input asp-for="Leaguename" class="form-control" placeholder="Title">
        <span asp-validation-for="Leaguename" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LeagueDescription">Description</label>
        <input asp-for="LeagueDescription" class="form-control" placeholder="Description">
        <span asp-validation-for="LeagueDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Level">Description</label>
        <input asp-for="Level" class="form-control" placeholder="Description">
        <span asp-validation-for="Level" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>