<table class="table table-hover table-bordered">
    <thead>
        <tr>

            <th scope="col">League Name</th>
            <th scope="col">Biography</th>
            <th scope="col">Level</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>

        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody>
            <tr>

                <td>@item.Leaguename</td>
                <td>@item.LeagueDescription</td>
                <td>@item.Level</td>
                <td><a asp-controller="League" asp-action="Edit" asp-route-id="@item.League_id" class="btn btn-sm btn-outline-secondary">Edit</a></td>
                <td><a asp-controller="League" asp-action="Delete" asp-route-id="@item.League_id" class="btn btn-sm btn-outline-secondary">Edit</a></td>
