<form method="post" asp-action="Create">
    <input type="hidden" id="BasketballNiId" name="BasketballNiId" asp-for="BasketballNiId" /> 
    <div class="form-group">
        <label asp-for="Name">Team Name</label>
        <input asp-for="Name" class="form-control"placeholder="Enter email">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Team Descrption</label>
        <input asp-for="Description" class="form-control" placeholder="Enter email">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LeagueName">League Name</label>
        <input asp-for="LeagueName" class="form-control" placeholder="Enter email">
        <span asp-validation-for="LeagueName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>