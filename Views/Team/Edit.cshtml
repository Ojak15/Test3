@using Test2.ViewModels
@model EditTeamViewModel

<form method="post" asp-action="Edit" enctype="multipart/form-data">
   
    <div class="form-group">
        <label asp-for="Name">Title</label>
        <input asp-for="Name" class="form-control" placeholder="Title">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" placeholder="Description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LeagueName">Description</label>
        <input asp-for="LeagueName" class="form-control" placeholder="Description">
        <span asp-validation-for="LeagueName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>